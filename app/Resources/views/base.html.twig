    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    {% block javascript %}{% endblock %}
    <script type="text/javascript" src="/inc/js/jquery.js"></script>
    <script type="text/javascript" src="/inc/js/jquery.pause.js"></script>
