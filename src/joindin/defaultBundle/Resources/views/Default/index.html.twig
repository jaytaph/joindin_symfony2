{% extends "::base.html.twig" %}

{% block title %}All talks {% endblock %}

{% block body %}

<div class="box">
<h2 class="h1 icon-event">Hot Events <a class="more" href="{{ path("joindinEventBundle_hot_events")}}">More &raquo;</a></h2>

{% for event in events %}
    {% include "joindinEventBundle:Default:event_row.html.twig" with { 'event' : event } %}
{% else %}
    No events found.
{% endfor %}

</div>

<div class="box">
<h2 class="h1 icon-talk">Popular Talks</h2>

{% for talk in talks %}
    {% include "joindinTalkBundle:Default:talk_row.html.twig" %}
{% else %}
    No talks found.
{% endfor %}
</div>

{% endblock %}